<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="CodeAIx.MainWindow"
        Title="CodeAIx"
        Width="600"
        Height="400">
   <Window.Styles>
      <Style Selector="Button.sidebar-icon">
         <Setter Property="Width"
                 Value="48" />
         <Setter Property="Height"
                 Value="48" />
         <Setter Property="Background"
                 Value="Transparent" />
         <Setter Property="BorderBrush"
                 Value="#2E2E2E" />
         <Setter Property="BorderThickness"
                 Value="1" />
         <Setter Property="CornerRadius"
                 Value="8" />
         <Setter Property="HorizontalAlignment"
                 Value="Center" />
         <Setter Property="Cursor"
                 Value="Hand" />
      </Style>
      <Style Selector="Button.sidebar-icon:pointerover">
         <Setter Property="Background"
                 Value="#2F3237" />
         <Setter Property="BorderBrush"
                 Value="#4B4B4B" />
      </Style>
      <Style Selector="Button.sidebar-icon:pressed">
         <Setter Property="Background"
                 Value="#3C3F44" />
      </Style>
      <Style Selector="Button.chat-action">
         <Setter Property="Padding"
                 Value="16,10" />
         <Setter Property="Margin"
                 Value="0" />
         <Setter Property="FontWeight"
                 Value="SemiBold" />
         <Setter Property="BorderThickness"
                 Value="0" />
         <Setter Property="CornerRadius"
                 Value="6" />
         <Setter Property="Foreground"
                 Value="White" />
         <Setter Property="HorizontalAlignment"
                 Value="Center" />
      </Style>
      <Style Selector="Button.chat-action.secondary">
         <Setter Property="Background"
                 Value="#2D323C" />
         <Setter Property="Foreground"
                 Value="#E2E2E2" />
      </Style>
      <Style Selector="Button.chat-action.secondary:pointerover">
         <Setter Property="Background"
                 Value="#3A414E" />
      </Style>
      <Style Selector="Button.chat-action.primary">
         <Setter Property="Background"
                 Value="#007ACC" />
      </Style>
      <Style Selector="Button.chat-action.primary:pointerover">
         <Setter Property="Background"
                 Value="#0D8DE1" />
      </Style>
   </Window.Styles>
   <DockPanel>
      <Menu DockPanel.Dock="Top">
         <MenuItem Header="_Archivo">
            <MenuItem Header="Hola Mundo"
                      Click="OnHolaMundoClick" />
            <MenuItem Header="Salir"
                      Click="OnSalirClick" />
         </MenuItem>
      </Menu>
      <Grid>
         <Grid.ColumnDefinitions>
            <ColumnDefinition Width="68" />
            <ColumnDefinition Width="*" />
         </Grid.ColumnDefinitions>
         <Border Grid.Column="0"
                 Background="#1E1E1E"
                 BorderBrush="#2A2A2A"
                 BorderThickness="0,0,1,0">
            <StackPanel Margin="0,24,0,24"
                        Spacing="18"
                        HorizontalAlignment="Center">
               <Button Classes="sidebar-icon"
                       ToolTip.Tip="Explorador de proyectos">
                  <Path Width="24"
                        Height="24"
                        Data="M3 5 H7 L9 7 H13 V13 H3 Z"
                        Stretch="Uniform"
                        Fill="#F5F5F5" />
               </Button>
               <Button Classes="sidebar-icon"
                       ToolTip.Tip="Pizarra de ideas">
                  <Path Width="24"
                        Height="24"
                        Data="M3 4 H13 V10 H10 L7 13 V10 H3 Z"
                        Stretch="Uniform"
                        Fill="#F5F5F5" />
               </Button>
               <Button Classes="sidebar-icon"
                       ToolTip.Tip="Panel de insights">
                  <Path Width="24"
                        Height="24"
                        Data="M8 3 L10 7 H14 L11 9.5 L12 13 L8 11 L4 13 L5 9.5 L2 7 H6 Z"
                        Stretch="Uniform"
                        Fill="#F5F5F5" />
               </Button>
            </StackPanel>
         </Border>
         <Border Grid.Column="1"
                 Background="#1B1E24">
            <Grid RowDefinitions="Auto,* ,Auto">
               <StackPanel Grid.Row="0"
                           Margin="20"
                           Spacing="4">
                  <TextBlock x:Name="GreetingText"
                             Text="Bienvenido a CodeAIx"
                             FontSize="26"
                             FontWeight="SemiBold"
                             Foreground="#F5F5F5" />
                  <TextBlock Text="Prepara tus instrucciones, adjunta material y envialo como si conversaras con Codex."
                             Foreground="#DADADA"
                             TextWrapping="Wrap" />
               </StackPanel>
               <Border Grid.Row="1"
                       Margin="20,0,20,12"
                       Background="#21242B"
                       CornerRadius="10">
                  <ScrollViewer>
                     <StackPanel x:Name="ConversationList"
                                 Margin="20"
                                 Spacing="12" />
                  </ScrollViewer>
               </Border>
               <Border Grid.Row="2"
                       Margin="20"
                       Background="#1E2127"
                       CornerRadius="12"
                       Padding="16">
                  <StackPanel Spacing="12">
                     <TextBlock Text="Editor de instrucciones"
                                FontWeight="SemiBold"
                                Foreground="#F5F5F5" />
                     <Border Background="#121417"
                             CornerRadius="8"
                             Padding="12">
                        <TextBox x:Name="InstructionEditor"
                                 Watermark="Escribe aqui como quieres que Codex trabaje..."
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 MinHeight="140"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="#F0F0F0" />
                     </Border>
                     <StackPanel Orientation="Horizontal"
                                 Spacing="12"
                                 HorizontalAlignment="Right">
                        <Button Classes="chat-action secondary"
                                Content="AÃ±adir"
                                Click="OnAddDraftClick" />
                        <Button Classes="chat-action primary"
                                Content="Enviar"
                                Click="OnSendClick" />
                     </StackPanel>
                  </StackPanel>
               </Border>
            </Grid>
         </Border>
      </Grid>
   </DockPanel>
</Window>
